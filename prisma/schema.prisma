// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_HOST")
}

model Product {
  id    String @id @db.Uuid
  name  String
  image String

  @@map("products")
}

model User {
  id       String  @id @db.Uuid
  name     String
  email    String
  password String
  terms    Boolean

  @@map("users")
}
